@model LoginViewModel

@section Style{
    <link rel="stylesheet" href="~/css/government/styles.css"/>
}

<div class="container align-content-center">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-4 mt-2">
            <h4 class="text-info text-center mt-5 ">
                <i class="fas fa-lock"></i>
            </h4>
            <h4 class="text-info text-center ">Вход </h4>

            <form action="/Citizen/Login" method="post">

                @Html.HiddenFor(x => x.ReturnUrl)

                <div class="form-group mb-4">

                    <label for="Name">Имя</label>

                    @Html.TextBoxFor(x => x.Name, new
                    {
                        @class = "form-control",
                        placeholder = "Имя пользователя",
                        required = "autofocus"
                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})
                    </small>
                </div>


                <div class="form-group mb-4">
                    <label for="password">Пароль</label>
                    @Html.TextBoxFor(x => x.Password, new
                    {
                        @class = "form-control",
                        placeholder = "Пароль"
                    })
                    <small>
                        @Html.ValidationMessageFor(x => x.Name, "", new {@class = "help-block form-text text-muted"})
                    </small>
                </div>

                <div class="mb-4">
                    <a class="register-link restyled-link" href="@Url.Action("Register", "Citizen")">Регистрация</a>
                </div>
                <button class="btn btn-primary btn-block" value="Login" type="submit">Войти</button>
            </form>
        </div>
    </div>
</div>