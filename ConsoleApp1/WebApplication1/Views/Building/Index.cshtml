@using WebApplication1.Models.Energy

@model List<BuildingViewModel>

@section Scripts {
    <script src="~/js/Energy/building.js"></script>
}


<h3>Count building @Model.Count</h3>


<select id="select_district" class="form-select" aria-label="Default select example" onchange="handleChange()">
    <option selected>All districts</option>
    <option value="Red District">Red District</option>
    <option value="Blue District">Blue District</option>
    <option value="Green District">Green District</option>
</select>


<table id="table" class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">House number</th>
            <th scope="col">Street</th>
            <th scope="col">Floor count</th>
            <th scope="col">District name</th>
            <th scope="col">Total area</th>
            <th scope="col">Consumption</th>
            <th scope="col">Total debt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <th scope="row">@building.Id</th>
                <td>@building.HouseNumber</td>
                <td>@building.Street</td>
                <td>@building.FloorCount</td>
                <td>@building.DistrictName</td>
                <td>@building.TotalArea</td>
                <td>@building.Consumption</td>
                <td>@building.TotalDebt</td>
            </tr>
        }
    </tbody>
</table>