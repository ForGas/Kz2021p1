@model List<PolicemanViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Rank</th>
            <th scope="col">Salary</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PolicemanViewModel user in Model)
        {
            <tr class="policeman" data-policemanid="@user.Id">
                <td>@user.Name</td>
                <td>@user.Rank</td>
                <td>@user.Salary</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-outline-danger details" id="dismiss-policeman">Dismiss</button>
                        <button class="btn btn-outline-success set-shift" id="set-shift" data-izimodal-open="#set-shift-form">Set shift</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination-wrapper d-flex justify-content-center align-items-center">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</div>

<div id="set-shift-form" class="p-2"  data-iziModal-group="shift-form">
    @await Html.PartialAsync("/Views/Shared/Police/ShiftForm.cshtml", new BasePolicemanShiftVM())
</div>