@{
    Layout = "_Layout";
}

@section Style {
    <link href="~/css/energy/index.css" rel="stylesheet" />
}

<section>

    <div id="carouselExampleCaptions" class="carousel slide container-shadow" data-ride="carousel">

        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>


        <div class="carousel-inner">


            <div class="carousel-item active">
                <img src="https://www.astrec.kz/uploads/images/5d4177443fe7e.jpg" class="img d-block w-100" alt="slide 1">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-slide">Welcome @ViewData["userName"] to the City Energy main page</h2>
                    <h4 class="text-white">Услуги</h4>
                    <p>Узнать больше.</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/1036936/pexels-photo-1036936.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="img d-block w-100" alt="slide 2">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-slide">Welcome @ViewData["userName"] to the City Energy main page</h2>
                    <h4 class="text-white">Контакты</h4>
                    <p>Узнать больше.</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://www.astrec.kz/uploads/images/5bfb76a5c79fb.jpg" class="img d-block w-100" alt="slide 3">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="text-slide">Welcome @ViewData["userName"] to the City Energy main page</h2>
                    <h4 class="text-white">Тарифы</h4>
                    <p>Узнать больше.</p>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</section>

