<link rel="stylesheet" href="~/css/entityAdding.css" />

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div>
        <h1 class="display-4 font-italic">Route Registration page</h1>
        
    </div>
</div>


<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
                <div class="form-container">
                    <h3 class="title">Route Registration</h3>
                    <form class="form-horizontal" action="@Url.Action("CreateRoute", "TripRoute")" method="post">
                        <div class="form-group">
                            <label>Title*</label>
                            <select class="form-select" aria-label="Default select example" type="text" name="title">
                                <option selected>Open this select menu</option>
                                <option>Daily Route</option>
                                <option>Grand Tour</option>
                                <option>Exclusive Tour</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Type*</label>
                            <select class="form-select" aria-label="Default select example" type="text" name="type">
                                <option selected>Open this select menu</option>
                                <option>ordinary</option>
                                <option>touristic</option>
                                <option>special</option>
                            </select>
                        </div>


                        <div class="form-group phone-no">
                            <label>Length*</label>
                            <input class="form-control" type="number" name="length">

                        </div>
                        <div class="form-group age">
                            <label>Price*</label>
                            <input class="form-control" type="number" name="price">
                        </div>


                        <button class="btn signin" type="submit" style="background-color: blue;">Register</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>