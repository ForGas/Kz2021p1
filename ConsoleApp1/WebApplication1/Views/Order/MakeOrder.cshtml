@model OrderViewModel

<link rel="stylesheet" href="~/css/entityAdding.css" />

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div>
        <h1 class="display-4 font-italic">Order Registration page</h1>        
    </div>
</div>

<div class="form-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
                <div class="form-container">
                    <h3 class="title">Order Form</h3>
                    <form class="form-horizontal" action="@Url.Action("MakeOrder", "Order")" method="post">
                        <div class="form-group">
                            <label>Full name*</label>
                            <input class="form-control" aria-label="Default select example" type="text" name="name">
                        </div>
                        <div class="form-group">
                            <label>Bus model*</label>
                            <select class="form-select" aria-label="Default select example" type="text" name="model">
                                <option selected>Open this select menu</option>
                                <option>IKAR</option>
                                <option>Star</option>
                                <option>Solaris</option>
                                <option>Aero</option>
                                <option>Aurora</option>
                            </select>
                        </div>
                        <div class="form-group phone-no">
                            <label>Route Title*</label>
                            <input class="form-control" type="text" name="RouteTitle">
                        </div>
                        <div class="form-group age">
                            <label>Duration*</label>
                            <input class="form-control" type="number" name="Period">
                        </div>
                        <button class="btn signin" type="submit" style="background-color: blue;">Order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>